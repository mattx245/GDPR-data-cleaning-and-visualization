{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "A bar chart with highlighting on hover and selecting on click. (Inspired by Tableau's interaction style.)",
  "title": "Number of GDPR Violations by Country",
  "data": {
    "url": "https://raw.githubusercontent.com/mattx245/GDPR-data-cleaning-and-visualization/main/cleaned_gdpr_data_graph.csv",
    "format": {"type": "csv"}
  },
  "params": [
    {"name": "highlight", "select": {"type": "point", "on": "pointerover"}},
    {"name": "select", "select": "point"}
  ],
  "transform": [
    {"aggregate": [{"op": "count", "as": "count"}], "groupby": ["name"]},
    {"calculate": "datum.count", "as": "sort_order"}
  ],
  "mark": {
    "type": "bar",
    "fill": "#4C78A8",
    "stroke": "black",
    "cursor": "pointer"
  },
  "encoding": {
    "x": {
      "field": "count",
      "type": "quantitative",
      "title": "Count of GDPR Violations"
    },
    "tooltip": [{"field": "count", "title": "Count of GDPR Violations"}],
    "y": {
      "field": "name",
      "type": "nominal",
      "sort": {"field": "sort_order", "order": "descending"},
      "title": "Country"
    },
    "fillOpacity": {"condition": {"param": "select", "value": 1}, "value": 0.3},
    "strokeWidth": {
      "condition": [
        {"param": "select", "empty": false, "value": 2},
        {"param": "highlight", "empty": false, "value": 1}
      ],
      "value": 0
    }
  },
  "config": {"scale": {"bandPaddingInner": 0.2}}
}